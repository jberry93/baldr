{% extends 'base.twig' %}

{% block content %}
  <div class="tile is-vertical is-ancestor">
    {% for post in posts %}
      <div class="tile is-parent">
        <article class="tile is-child is-light notification">
          <p class="title">
            <a href="{{post.link}}">
              {{post.title}}
            </a>
          </p>
          <hr>
          <p class="subtitle">
            Posted on {{post.post_date|date('F d, Y')}}
          </p>
          {% if post.get_thumbnail %}
            <figure class="image">
              <img src="{{post.thumbnail.src}}">
            </figure>
          {% endif %}
          <div class="content">
            {{post.preview}}
          </div>
        </article>
      </div>
    {% endfor %}
  </div>
  {% include 'partials/pagination.twig' with {pagination: posts.pagination({show_all: false, mid_size: 1, end_size: 2})} %}
{% endblock %}
