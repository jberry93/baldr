<article class="media">
  <form method="post" action="{{site.site_url~'/wp-comments-post.php'}}">
    <div class="media-content">
      {% if user %}
        <input
          type="hidden"
          name="email"
          value="{{user.email}}"
        >
        <input
          type="hidden"
          name="author"
          value="{{user.name}}"
        >
        <input
          type="hidden"
          name="url"
          value="{{user.link}}"
        >
      {% else %}
        <div class="field">
          <label class="label" for="email">Email</label>
          <div class="control">
            <input
              required
              class="input"
              name="email"
              type="text"
              id="email"
            >
          </div>
          <label class="label" for="author">Author</label>
          <div class="control">
            <input
              required
              class="input"
              name="author"
              type="text"
              id="author"
            >
          </div>
          <label class="label" for="url">URL</label>
          <div class="control">
            <input
              required
              class="input"
              name="url"
              type="text"
              id="url"
            >
          </div>
        </div>
      {% endif %}
      <div class="field">
        <label class="label" for="comment">Comment</label>
        <div class="control">
          <textarea
            class="textarea"
            placeholder="Add a comment"
            name="comment"
            cols="60"
            rows="3"
            id="comment"
          ></textarea>
        </div>
      </div>
      <input
        type="hidden"
        name="comment_post_ID"
        value="{{post.id}}"
        id="comment_post_ID"
      >
      <input
        type="hidden"
        name="comment_parent"
        value="{{comment.ID|default('0')}}"
        id="comment_parent"
      >
      <div class="field is-grouped">
        <div class="control">
          <button class="button is-link" type="submit" name="Submit">
            Submit
          </button>
        </div>
        <div class="control">
          <button class="button is-text" type="reset">
            Cancel
          </button>
        </div>
        <strong>
          Your comment will be revised by the site if needed
        </strong>
      </div>
    </div>
  </form>
</article>
